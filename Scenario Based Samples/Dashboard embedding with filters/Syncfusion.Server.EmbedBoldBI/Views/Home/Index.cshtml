@using Syncfusion.Server.EmbedBoldBI.Models;
@{
    ViewBag.Title = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="~/css/Site.css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jsrender/1.0.0-beta/jsrender.min.js"></script>
@*    <script type="text/javascript" src="https://cdn.boldbi.com/embedded-sdk/v5.2.48/embed-js.js"></script>
*@    <script type="text/javascript" src="~/js/Embed/Index.js"></script>
    <script type="text/javascript" src="~/js/Embed/EmbedWrapper.js"></script>
    <script type="text/javascript">
        var rootUrl = "@EmbedProperties.RootUrl";
        var siteIdentifier = "@EmbedProperties.SiteIdentifier";
        var environment = "@EmbedProperties.Environment";
        var dashboardPath= "@EmbedProperties.DashboardPath";
        var authorizationServerUrl = "@Url.Action("GetDetails", "Home")";
        var getWidgetsUrl = "@Url.Action("GetWidgets", "Home")";
        var getDashboardsUrl = "@Url.Action("GetDashboards", "Home")";
    </script>

</head>

<body onload="Init()">
   <div id="viewer-section">
        <div id="dashboard"></div>
    </div>
    <div id="property">
        <div class="property-header">
            <h5>Properties</h5>
            <div class="separator"></div>
        </div>
        <div class="dimension-filter">
            <span><b>Dimension Filter</b></span>
            <div class="dimension-initial">
                <span>In <b>Initial Rendered dashboard</b>, you can see below values are filtered in <b>Avg. Resolution Time by Agent</b> widget.</span>
                <ul>
                    <li>Agent_1</li>
                    <li>Agent_5</li>
                    <li>Agent_7</li>
                </ul>
            </div>
            <div class="dimension-ondemand">
                <span>For <b>On-demand Action</b>, you need to click the <b>"Apply Dimension Filters"</b> button to filter the below given values in <b>Avg. Resolution Time by Agent</b> widget.</span>
                <ul>
                    <li>Agent_4</li>
                    <li>Agent_6</li>
                    <li>Agent_8</li>
                </ul>
                <div class="filter-button"><button onclick="widgetDimensionFilters()">Apply Dimension Filters</button></div>
            </div>
        </div>
        <div class="separator inter"></div>
        <div class="date-filter">
            <span><b>Date Filter</b></span>
            <div class="date-initial">
                <span>In <b>Initial Rendered dashboard</b>, you can see the below date range are filtered in <b>Date</b> widget.</span>
                <p>"1/1/2022" - "6/30/2022"</p>
            </div>
            <div class="date-ondemand">
                <span>For <b>On-demand Action</b>, you need to click the <b>"Apply Date Filters"</b> button to filter the below given range in <b>Date</b> widget.</span>
                <p>"7/1/2022" - "12/31/2022"</p>
                <div class="filter-button"><button onclick="widgetDateFilters()">Apply Date Filters</button></div>
            </div>
        </div>
    </div>
</body>

</html>
