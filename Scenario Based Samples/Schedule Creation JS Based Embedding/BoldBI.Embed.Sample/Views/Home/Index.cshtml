@using BoldBI.Embed.Sample.Models
@{
    ViewBag.Title = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript">
        var getTokenUrl = "@Url.Action("GetAuthorizeToken", "Home")";
    </script>
    <script type="text/javascript" src="https://cdn.boldbi.com/embedded-sdk/latest/boldbi-embed.js"></script>
    <script type="text/javascript" src="~/js/Index.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript">
        var rootUrl = "@ViewBag.ServerUrl";
        var dashboardId = "@ViewBag.DashboardId";
        var siteIdentifier = "@ViewBag.SiteIdentifier";
        var environment = "@ViewBag.Environment";
        var embedType = "@ViewBag.EmbedType";
        var authorizationServerUrl = "@Url.Action("AuthorizationServer", "Home")";
        var getDashboardsUrl = "@Url.Action("GetDashboards", "Home")";
    </script>
    <style>
        button {
            padding: 10px 20px;
            font-size: 16px;
            margin: 10px;
            cursor: pointer;
        }
        #dialogOverlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }
        #dialogBox {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80%;
            height: 80%;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            z-index: 1001;
            display: flex;
            flex-direction: column;
        }
        #dialogHeader {
            padding: 10px;
            background-color: #007bff;
            color: white;
            font-size: 18px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        #closeDialog {
            cursor: pointer;
            font-size: 20px;
            font-weight: bold;
        }
        
        #loader-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            background-color: var(--material-switch-foreground-bg-normal-color) !important;
            opacity: .85 !important;
            
            .loader-icon{
                visibility: visible;
                display: block;
                position: relative;
                left: 0px !important;
                position: relative;
                margin: 0px auto;
                width: 54px;
                height: 54px;
            }
            .circular{
                animation: rotate 2s linear infinite;
                height: 54px;
                width: 54px;
                position: fixed;
                stroke: var(--primary-branding-color);
            }


            .path {
                stroke-dasharray: 1, 200;
                stroke-dashoffset: 0;
                animation: dash 1.5s ease-in-out infinite;
                stroke: #0565FF;
                stroke-linecap: square;
            }
        }
        

        /* Iframe container */
        #iframeContainer {
            flex-grow: 1;
            border: none;
        }
        .boldbi-dashboarddesigner .e-rte-item .e-control.e-richtexteditor .e-rte-content.e-rte-content-background {
            background: var(--designer-viewer-background-color) !important;
        }
        </style>
</head>

<body onload="renderDashboard(dashboardId)">
    <button onclick="onClik()">Click me</button>
    <button id="scheduleButton">Create Schedule</button>

    <div id="dialogOverlay">
        <div id="dialogBox">
            <div id="dialogHeader">
                <span>Schedule Page</span>
                <span id="closeDialog">&times;</span>
            </div>
            <iframe id="iframeContainer" src="" width="100%" height="100%"></iframe>
        </div>
    </div>
<div id="viewer-section" style="width: 100%">
    <div id="dashboard"></div>
</div>
    <!-- Loader Overlay -->
    <div id="loader-overlay">
        <div class="loader-blue loader-icon">
            <svg class="circular">
            <circle class="path" cx="27" cy="27" r="20" fill="none" stroke-width="4" stroke-miterlimit="10">
            </circle>
            </svg>
        </div>
    </div>

    <script>
        window.addEventListener('message', (event) => {
            const parentElement = document.getElementById('loader-overlay');
            switch (event.data) {
                case 'hideLoader':
                    parentElement.style.display = "none";
                    break;
                case 'showLoader':
                    parentElement.style.display = "flex";
                    break;
                case 'closeDialog':
                    closeDialogBox();
                    break;
                case 'getToken':
                    event.source.postMessage({ action: 'getToken', token }, event.origin);
                    break;
            }
        });
        
    function onClik() {
        var instance=bbdesigner$("#dashboard_embeddedbi").data("BoldBIDashboardDesigner");
        instance.clearAllFilters();
    }
    const scheduleButton = document.getElementById('scheduleButton');
    const dialogOverlay = document.getElementById('dialogOverlay');
    const iframeContainer = document.getElementById('iframeContainer');
    const closeDialog = document.getElementById('closeDialog');

    function openDialog() {
        // Display the dialog
        var loader = document.getElementById("loader-overlay");
        loader.style.display = "flex";
        dialogOverlay.style.display = 'block';
        iframeContainer.src = 'http://localhost:63316/bi/site/site1/schedules/schedule-dialog?itemName=Sales%20Analysis%20Dashboard&&itemId=a304d87c-ec0d-4bff-b7b3-4b24002e1124&&categoryName=Getting%20Started%20Tutorial&&categoryId=b62b3897-6202-49f2-86d0-530c43a3512b&&viewId=&&canDisableDashboardChange=true&&CanDisableCategoryChange=true&&CanDisableViewChange=true&&canShowViewDropDown=false&&disableWidgetScheduleExport=true&&actionType=Create&isembed=true'; // Replace with your schedule page URL
    }
        
    function closeDialogBox() {
        dialogOverlay.style.display = 'none';
        iframeContainer.src = ''; // Clear iframe source
    }
    scheduleButton.addEventListener('click', openDialog);
    closeDialog.addEventListener('click', closeDialogBox);
</script>
</body>
</html>
